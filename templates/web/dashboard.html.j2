{% extends 'base.html.j2' %}


{% block main_content %}
 <div class="main-content inner signup-form">
      <!-- div class main content start-->
      <!-- /container -->
<section class="scroll-first section-padding" id="dashbord-home">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 dashbord">

                <div class="col-sm-3 secondry-bg dashbord-menu">

                  {% include 'web/dashboard-side.html.j2' %}

                </div>



                <div class="col-sm-9 dashbord-content cart-sec">
                <div class="col-xs-12 section-tilte no-gutter">
                <h3 class="title-head"><span>Hello</span> {{request.user.username}}</h3>
                </div>
                <div class="col-xs-12 no-gutter">
                <h5 class="title"><span>Recent</span>&nbsp;Order(s)</h5>
                </div>

                {% if orders|length > 0 %}
                  <div class="col-xs-12 no-gutter cart-head cart-box">
                    <div class="col-sm-2">
                        <h4 class="title">Order</h3>
                    </div>
                    <div class="col-sm-2">
                        <h4 class="title">No. Of Item(s)</h3>
                    </div>
                    <div class="col-sm-2">
                        <h4 class="title">Order ID</h3>
                    </div>
                    <div class="col-sm-2">
                        <h4 class="title">Order Status</h3>
                    </div>
                    <div class="col-sm-2">
                        <h4 class="title">Date</h3>
                    </div>
                    <div class="col-sm-2">
                        <h4 class="title">View Detail</h3>
                    </div>
                </div>
                {% endif %}
                {% if orders|length <=0 %}
                  <div class="col-xs-12 no-gutter cart-head cart-box">
                      <p>You have no Orders.</p>
                  </div>
                {% endif %}



                {% for order in orders %}

                  <div class="col-xs-12 no-gutter cart-box">
                    <div class="col-sm-2">
                        <!-- <div class="cart-image"> -->
                            <img src="/media/{{order.plant_details[0].plant.image}}" alt=""/>
                        <!-- </div> -->
                    </div>
                    <div class="col-sm-2">
                        <p class="text">{{order.plant_details|length}}</p>
                    </div>
                    <div class="col-sm-2">
                        <p class="text">{{order.id}}</p>
                    </div>
                    <div class="col-sm-2 add-to-cart quantity">
                        <p class="text">{{order.get_status_display()}}</p>
                    </div>
                    <div class="col-sm-2">
                        <p class="text">{{order.placed_on.strftime('%d %b, %Y')}}</p>
                    </div>

                    <div class="col-sm-2">
                        <a href="{{url('my-order-details',args=[order.id])}}">View Detail</a>
                    </div>
                </div>
                {% endfor %}

            </div>




                </div>
            </div>
        </div>
    </div>
</section>
</div>
{% endblock %}
